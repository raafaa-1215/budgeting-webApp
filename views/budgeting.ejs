<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Budgeting</title>
        <link rel="stylesheet" href="budgeting.css">
        <script type="text/javascript" src="features.js"></script>
    </head>
    <body>
        <%- include('navbar') %>
        <div class="body">
            <div class="top-row">
                <h1>Budgeting</h1>
                <a class="back-btn" href="/"><img src="back-icon.png" width="24px" height="24px">Back</a>
            </div>

            <div class="budgeting-table-div" id="budgeting-table-div">
                <div class="add-btn-div">
                    <button  class="add-btn" onclick="togglePopUp(1)"><img src="add-icon.png" width="24px" height="24px">Add New Budget</button>
                </div>
                <table class="budgeting-table">
                    <tr>
                        <th>Income</th>
                        <th>Expense</th>
                        <th>Amount</th>
                        <th>Added</th>
                        <th>Actions</th>
                    </tr>
                    <%if (budgetingData[0] == null) { %>
                        <td colspan="9"><h2>No data found!</h2></td>
                    <% } else {
                        for (let i = 0; i < budgetingData.length; i++) { %>
                            <tr>
                                <td><%= budgetingData[i].incomeName %></td>
                                <td><%= budgetingData[i].expenseName %></td>
                                <td><%= budgetingData[i].amount %></td>
                                <td><%= budgetingData[i].dateAdded %></td>
                            </tr>
                            <td>
                                <!-- todo: acabar ambos os botÃµes -->
                                <button class="btn-open-popup" id="edit" onclick="togglePopUp(2)"><img src="/edit-icon.png" width="24px" height="24px">Edit</button>
                                <button id="remove"><img src="/delete-icon.png" width="24px" height="24px">Delete</button>
                            </td>
                        </tr>
                    <% } } %>
                </table>
            </div>
        </div>

        <!-- Add New Button Popup-->
        <!-- todo: acabar add -->
        <div class="popup">
            <div id="popupOverlayAdd" class="overlay-container"> 
                <div class="popup-box"> 
                    <h2> Add Income String</h2> 
                    <form class="form-container" method="post"> 
                        <label class="form-label" for="name"><h3> Name: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Name" id="name" name="name" required> 
                        <label class="form-label" for="description"><h3> Description: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Description" id="description" name="description" required> 
                        <label class="form-label" for="source"><h3>Source: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Source" id="source" name="source" required>
                        <label class="form-label" for="type"><h3>Type: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Type" id="type" name="type" required>
                        <label class="form-label" for="payday"><h3>Payday: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Payday" id="payday" name="payday" required>
                        <label class="form-label" for="amount"> <h3>Amount: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Amount" id="amount" name="amount" required>
                        <button class="btn-submit" type="submit"> Submit </button> 
                    </form> 
                    <button id="close" class="btn-close-popup" onclick="togglePopUp(1)"> Close </button> 
                </div> 
            </div>
        </div>

        <!-- Edit Button Popup -->
        <!-- todo: acabar edit -->
        <div class="popup">
            <div id="popupOverlayEdit" class="overlay-container"> 
                <div class="popup-box"> 
                    <h2> Edit Budgeting</h2> 
                    <form class="form-container" method="put">
                        <input type="hidden" name="id" value="">
                        <label class="form-label" for="name"><h3> Source: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Source" id="source" name="source" required> 
                        <label class="form-label" for="description"><h3> Destination: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Destination" id="destination" name="destination" required> 
                        <label class="form-label" for="source"><h3>Amount: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Source" id="amount" name="amount" required>
                        <label class="form-label" for="type"><h3>Next Payment In: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Type" id="type" name="type" required>
                        <label class="form-label" for="payday"><h3>Payday: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Payday" id="payday" name="payday" required>
                        <button class="btn-submit" type="submit"> Submit </button>  
                    </form>
                    <button id="close" class="btn-close-popup" onclick="togglePopUp(1)"> Close </button> 
                </div> 
            </div> 
        </div>

    </body>
</html>