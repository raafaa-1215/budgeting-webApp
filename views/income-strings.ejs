<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Income Strings</title>
        <link rel="stylesheet" href="income-strings.css">
        <script type="text/javascript" src="features.js"></script>
    </head>
    <body>
        <%- include('navbar') %>
        <div class="body">
            <div class="top-row">
                <h1>Income Strings</h1>
                <a class="back-btn" href="/"><img src="back-icon.png" width="24px" height="24px">Back</a>
            </div>

            <div class="income-strings-table-div" id="income-strings-table-div">
                <div class="add-btn-div">
                    <button  class="add-btn" onclick="togglePopUp(1)"><img src="add-icon.png" width="24px" height="24px">Add New Income String</button>
                </div>
                <table class="income-strings-table">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Source</th>
                        <th>Amount</th>
                        <th>Payday</th>
                        <th>Created</th>
                        <th>Last Edited</th>
                        <th>Actions</th>
                    </tr>
                    <tr>
                        <td>ExampleName1</td>
                        <td>ExampleDescription1</td>
                        <td>Salary</td>
                        <td>ExampleCompany1</td>
                        <td class="middle">1700€</td>
                        <td>Monthly</td>
                        <td class="middle">01-01-2024</td>
                        <td class="middle">02-02-2024</td>
                        <td class="action">
                            <button class="edit" id="edit" onclick="togglePopUp(2)"><img src="edit-icon.png" width="24px" height="24px">Edit</button>
                            <button id="remove" class="remove"><img src="delete-icon.png" width="24px" height="24px">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>ExampleName2</td>
                        <td>ExampleDescription2</td>
                        <td>Service</td>
                        <td>ExampleCompany2</td>
                        <td class="middle">1700€</td>
                        <td>Monthly</td>
                        <td class="middle">01-01-2024</td>
                        <td class="middle">02-02-2024</td>
                        <td class="action">
                            <button class="edit" id="edit" onclick="togglePopUp(2)"><img src="edit-icon.png" width="24px" height="24px">Edit</button>
                            <button id="remove" class="remove"><img src="delete-icon.png" width="24px" height="24px">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>ExampleName3</td>
                        <td>ExampleDescription3</td>
                        <td>Sales</td>
                        <td>ExampleCompany3</td>
                        <td class="middle">1700€</td>
                        <td>Monthly</td>
                        <td class="middle">01-01-2024</td>
                        <td class="middle">02-02-2024</td>
                        <td class="action">
                            <button class="edit" id="edit" onclick="togglePopUp(2)"><img src="edit-icon.png" width="24px" height="24px">Edit</button>
                            <button id="remove" class="remove"><img src="delete-icon.png" width="24px" height="24px">Delete</button>
                        </td>
                    </tr>        
                </table>
            </div>
        </div>

        <!-- Add New Button Popup-->
        <div class="popup">
            <div id="popupOverlayAdd" class="overlay-container"> 
                <div class="popup-box"> 
                    <h2> Add Income String</h2> 
                    <form class="form-container"> 
                        <label class="form-label" for="name"><h3> Name: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Name" id="name" name="name" required> 
                        <label class="form-label" for="description"><h3> Description: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Description" id="description" name="description" required> 
                        <label class="form-label" for="source"><h3>Source: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Source" id="source" name="source" required>
                        <label class="form-label" for="type"><h3>Type: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Type" id="type" name="type" required>
                        <label class="form-label" for="payday"><h3>Payday: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Payday" id="payday" name="payday" required>
                        <label class="form-label" for="amount"> <h3>Amount: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Amount" id="amount" name="amount" required>
                        <button class="btn-submit" type="submit"> Submit </button> 
                    </form> 
            
                    <button id="close" class="btn-close-popup" onclick="togglePopUp(1)"> Close </button> 
                </div> 
            </div> 
        </div>

        <!-- Edit Button Popup -->
        <div class="popup">
            <div id="popupOverlayEdit" class="overlay-container"> 
                <div class="popup-box"> 
                    <h2> Edit Income String</h2> 
                    <form class="form-container"> 
                        <label class="form-label" for="name"><h3> Name: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Name" id="name" name="name" required> 
                        <label class="form-label" for="description"><h3> Description: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Description" id="description" name="description" required> 
                        <label class="form-label" for="source"><h3>Source: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Source" id="source" name="source" required>
                        <label class="form-label" for="type"><h3>Type: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Type" id="type" name="type" required>
                        <label class="form-label" for="payday"><h3>Payday: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Payday" id="payday" name="payday" required>
                        <label class="form-label" for="amount"> <h3>Amount: </h3></label> 
                        <input class="form-input" type="text" placeholder="Insert Amount" id="amount" name="amount" required>
                        <button class="btn-submit" type="submit"> Submit </button>  
                    </form> 
            
                    <button id="close" class="btn-close-popup" onclick="togglePopUp(2)"> Close </button> 
                </div> 
            </div> 
        </div>

    </body>
</html>